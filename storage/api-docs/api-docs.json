                    "name",
                    "description",
                    "price",
                    "stock",
                    "sku"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "iPhone 15"
                    },
                    "description": {
                        "type": "string",
                        "example": "Latest smartphone with advanced features"
                    },
                    "price": {
                        "type": "number",
                        "format": "float",
                        "example": 999.99
                    },
                    "stock": {
                        "type": "integer",
                        "example": 50
                    },
                    "sku": {
                        "type": "string",
                        "example": "IPH15256BLK"
                    },
                    "image_url": {
                        "type": "string",
                        "example": "https://example.com/images/iphone15.jpg"
                    },
                    "is_active": {
                        "type": "boolean",
